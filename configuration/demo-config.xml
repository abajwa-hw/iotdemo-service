  <property>
    <name>demo.log</name>
    <value>/var/log/iotdemo.log</value>
    <description>Log file (required)</description>
  </property> 
    
  <property>
    <name>demo.mvn_home</name>
    <value>/usr/local</value>
    <description>Dir to install maven into. 'maven' subdir will be created under this location</description>
  </property> 

  <property>
    <name>demo.num_events</name>
    <value>50</value>
    <description>Number of events per batch to simulate for each driver. Set to -1 to generate large number of events</description>
  </property> 

  <property>
    <name>demo.event_delay</name>
    <value>1500</value>
    <description>Time delay between each simulated event (in milliseconds)</description>
  </property> 
      

  <property>
    <name>demo.hbase_zookeeper</name>
    <value>{{hbase_zookeeper}}</value>
    <description>HBase Zookeeper host. Will be auto-detected if Hase is installed on this cluster. Otherwise, this should be manually changed</description>
  </property> 
      

    
    
    
